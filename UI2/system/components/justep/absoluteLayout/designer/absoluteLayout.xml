<?xml version="1.0" encoding="utf-8"?>

<elements> 
  <element name="$UI/system/components/justep/absoluteLayout/absoluteLayout" tag-name="div" icon="absoluteLayout.gif" text="cell布局"
    display-property="id" component-type="layout-container"  binding-component="$UI/system/components/justep/absoluteLayout/absoluteLayout"
    design-view="web-designer" > 
    <properties> 
      <property name="id" text="编号" required="false"/>
      <property name="style" text="样式" editor-ref="styleDialog" use-default="true"/> 
	  <property name="class"  text="class" editor-ref="classSelector">
		<editor-parameter><![CDATA[
		{
			"5kind": {
				label: "基础",
				value: "x-cell-layout",
				require: false
			}
		}
		]]></editor-parameter>
	 </property>
      <property name="layout-data" text="布局数据" path="layout-content/text()"/> 
    </properties>
    <property-editors/>  
    <events/>  
    <templates> 
      <template name="default"><![CDATA[ 
		       <div class="x-absolute-layout" component="$UI/system/components/justep/absoluteLayout/absoluteLayout" style="width:100%; height: 100%;"> 
 
      			</div>
		   ]]></template>
    </templates>
     <toolbar>
			<item text="左对齐" method="leftAlign" icon="align_h_left.gif"/>
			<item text="右对齐" method="rightAlign" icon="align_h_right.gif"/>
			<item text="上对齐" method="topAlign" icon="align_v_top.gif"/>
			<item text="下对齐" method="bottomAlign" icon="align_v_bottom.gif"/>
			<item text="水平中心对齐" method="horizontalCenterAlign" icon="align_h_centers.gif"/>
			<item text="垂直中心对齐" method="verticalCenterAlign" icon="align_v_centers.gif"/>
			<item text="水平等间距" method="horizontalSpaceEqually" icon="align_h_space.gif"/>
			<item text="垂直等间距" method="verticalSpaceEqually" icon="align_v_space.gif"/>
			<item text="复制宽度" method="replicateWidth" icon="align_width.gif"/>
			<item text="复制高度" method="replicateHeight" icon="align_height.gif"/>
			<item text="水平中间" method="horizontalCenter" icon="align_h_center.gif"/>
			<item text="垂直中间" method="verticalCenter" icon="align_v_center.gif"/>
	</toolbar>
  </element>
</elements>  
