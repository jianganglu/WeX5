<?xml version="1.0" encoding="UTF-8"?>
<elements>
	<element name="$UI/system/components/fragment/listDetailForm/listDetailForm"
		tag-name="div" icon="mutilLayoutListForm.png" text="code"
		component-type="listDetailForm" 
		design-view="web-designer">
		<properties>
			<property name="xid" text="编号" required="false"
				editor-discriptor-ref="" />
			<property name="style" text="样式" editor-ref="styleDialog" />
		</properties>
		<templates>
			<template name="default"><![CDATA[ 
					<div component="$UI/system/components/bootstrap/tabs/tabs(bootstrap)"> 
					    <ul class="nav nav-tabs"> 
					      <li class="active"> 
					        <a content="tabContent1" xid="tabItem1">tab1</a> 
					      </li>  
					      <li role="presentation" xid="li2"> 
					        <a content="tabContent2" xid="tabItem2">tab2</a> 
					      </li> 
					    </ul>  
					    <div class="tab-content"> 
					      <div class="tab-pane active" xid="tabContent1"> 
					        <div component="$UI/system/components/justep/dataTables/dataTables"
					          flexibleWidth="true" rowActiveClass="active" class="table table-hover table-striped"> 
					          <columns/> 
					        </div>  
					        <div component="$UI/system/components/justep/pagerBar/pagerBar" class="x-pagerbar container-fluid"> 
					          <div class="row"> 
					            <div class="col-sm-3"> 
					              <div class="x-pagerbar-length"> 
					                <label component="$UI/system/components/justep/pagerLimitSelect/pagerLimitSelect"
					                  class="x-pagerlimitselect"> 
					                  <span>显示</span>  
					                  <select component="$UI/system/components/justep/select/select"
					                    class="form-control input-sm"> 
					                    <option value="10">10</option>  
					                    <option value="20">20</option>  
					                    <option value="50">50</option>  
					                    <option value="100">100</option>
					                  </select>  
					                  <span>条</span>
					                </label> 
					              </div> 
					            </div>  
					            <div class="col-sm-3"> 
					              <div class="x-pagerbar-info">当前显示0条，共0条</div>
					            </div>  
					            <div class="col-sm-6"> 
					              <div class="x-pagerbar-pagination"> 
					                <ul class="pagination" component="$UI/system/components/bootstrap/pagination/pagination(bootstrap)">
					                  <li class="prev"> 
					                    <a href="#"> 
					                      <span aria-hidden="true">«</span>  
					                      <span class="sr-only">Previous</span>
					                    </a> 
					                  </li>  
					                  <li class="next"> 
					                    <a href="#"> 
					                      <span aria-hidden="true">»</span>  
					                      <span class="sr-only">Next</span>
					                    </a> 
					                  </li> 
					                </ul> 
					              </div> 
					            </div> 
					          </div> 
					        </div>
					      </div> 
					      <div class="tab-pane" xid="tabContent2">
					      	<div component="$UI/system/components/justep/toolBar/toolBar" class="x-toolbar form-inline x-toolbar-spliter">
					            <a component="$UI/system/components/justep/button/button" class="btn btn-link"
					              label="保存"> 
					              <i/>  
					              <span/>
					            </a>
					            <a component="$UI/system/components/justep/button/button" class="btn btn-link"
					              label="刷新"> 
					              <i/>  
					              <span/>
					            </a>
					            <a component="$UI/system/components/justep/button/button" class="btn btn-link"
					              label="上一条"> 
					              <i/>  
					              <span/>
					            </a>
					            <a component="$UI/system/components/justep/button/button" class="btn btn-link"
					              label="下一条"> 
					              <i/>  
					              <span/>
					            </a>
					          </div> 
					        <div class="form-horizontal container-fluid" component="$UI/system/components/bootstrap/form/form">
					          <div class="form-group"> 
					            <div class="col-sm-2">label1*：</div>  
					            <div class="col-sm-4">
					              <input component="$UI/system/components/justep/input/input" class="form-control"/>
					            </div>  
					            <div class="col-sm-2">label2*：</div>
					            <div class="col-sm-4">
					              <input component="$UI/system/components/justep/input/input" class="form-control"/>
					            </div>
					          </div>  
					          <div class="form-group"> 
					            <div class="col-sm-2">label3*：</div>  
					            <div class="col-sm-4">
					              <input component="$UI/system/components/justep/input/input" class="form-control"/>
					            </div>  
					            <div class="col-sm-2">label4*：</div>
					            <div class="col-sm-4">
					              <input component="$UI/system/components/justep/input/input" class="form-control"/>
					            </div>
					          </div>
					        </div>
					      </div> 
					    </div> 
					  </div>
		   ]]></template>
		</templates>
	</element>
</elements>